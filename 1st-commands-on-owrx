#
sudo openwebrx admin adduser 
# sudo openwebrx admin removeuser admin
sudo openwebrx admin disableuser admin
#
mkdir ~/.config/owrx
# 
ln -s /var/lib/openwebrx/settings.json ~/.config/owrx/settings.json 
ln -s /var/lib/openwebrx/users.json ~/.config/owrx/users.json 
ln -s /var/lib/openwebrx/bookmarks.json ~/.config/owrx/bookmarks.json 
#
ln -s /etc/openwebrx/bands.json ~/.config/owrx/bands.json
ln -s /etc/openwebrx/openwebrx.conf ~/.config/owrx/openwebrx.conf
